<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel AutomationProperties.Name="Display">
            <StackPanel Orientation="Horizontal" Margin="50,50,0,0">
                <TextBlock Margin="10,10,10,10" Text="Name : " />
                <TextBlock Margin="10,10,10,10" Width="100" Text="{Binding Name}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="50,0,50,0">
                <TextBlock Margin="10,10,10,10" Text="Age : " />
                <TextBlock Margin="10,10,10,10" Width="200" Text="{Binding Age}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
